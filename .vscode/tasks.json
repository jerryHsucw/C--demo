{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet build (project)",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/C--demo.csproj",
        "/property:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Build C--demo.csproj (used to avoid building a single .cs file)"
    }
  ]
}
